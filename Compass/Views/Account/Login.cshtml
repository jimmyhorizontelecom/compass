@model LoginViewModel

@{
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}
@{
    // string siteUrl = System.Configuration.ConfigurationManager.AppSettings["SiteUrl"];
    // string website = System.Configuration.ConfigurationManager.AppSettings["SiteName"];
}
<div class="container">
    <div class="row ">
        <div class="col-lg-8 col-md-5 width">

        </div>
        <div class="col-lg-4 col-md-7 col-sm-12 col-12 ">
            <div class="card login-card-custom">
                <h4 class="heading-font montserrat">Welcome to the Portal!</h4>
                <p class="subtitle montserrat">Sign in to your account</p>

                <section id="loginForm">
                      <form asp-action="Login" class="form-control" method="post">
                    
                    
                        
                        <div class="mb-3">
                            <label class="form-label montserrat">Username</label>
                            <div class="input-group">
                             <span class="input-group-text"><i class="bi bi-person-fill"></i></span>
                            
                            <input asp-for="Username" class="form-control montserrat" />

                              
                            </div>
                          
                        </div>

                        <div class="mb-3">
                        <label class="form-label montserrat">Password</label>
                        
                             <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-lock-fill"></i></span>
                            <input asp-for="Password" type="password" class="form-control montserrat" />
                           <button class="btn btn-outline-secondary" type="button" id="togglePassword"><i class="bi bi-eye-fill"></i></button>
                            </div>
                            
                        </div>
                        <div class="mb-3">
                            @if (ViewBag.Error != null)
                            {
                                <p style="color:red">@ViewBag.Error</p>
                            }
                        </div>

                        <div class="mb-3 text-start">
                            <a href="#" onclick="showError()" class="small montserrat link-text">Forgot Password?</a>
                        </div>
                        <button type="submit" class="btn btn-primary w-100 fw-bold montserrat asubmitLogin">Login</button>

                      
                        <div class="text-center mt-3">
                            <a href="#" onclick="showError()" class="montserrat link-text">Sign up to create a new account</a>
                        </div>
                        </form>
                </section>
            </div>
        </div>
    </div>
</div>




