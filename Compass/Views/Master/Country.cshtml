@{
    ViewBag.Title = "Country";
    ViewBag.PageTitle = "Country";
    
}

<div class="page-content ">
    <div class="container-fluid mt-4">

        <!-- Card 1: Page Title + Add Button -->
        <div class="card mb-3 shadow-sm">
            <div class="card-body d-flex justify-content-between align-items-center">
                <h1 class="h4 m-0">@ViewBag.PageTitle</h1>
                <button class="btn btn-primary btnAddModal" onclick="OpenAddModel()">
                    <i class="fa fa-plus me-1"></i> Add Country
                </button>
            </div>
        </div>


        <div class="card shadow-sm">
            <div class="card-body">
                <!-- States Table -->
                <div class="table-responsive">
                    <table class="table table-striped table-bordered" id="tblCountries">
                        <thead class="table-primary">
                            <tr>
                                <th style="width:50px;">Sr. No.</th>
                                <th>Country Name</th>
                                <th>Country Code</th>
                                <th class="text-center">Status</th>
                                <th class="text-center">Edit</th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>

            </div> <!-- card-body -->
        </div> <!-- card -->

    </div> <!-- container -->
    <!-- Modal -->
    <div class="modal fade" id="myModal" tabindex="-1" aria-labelledby="myModalLabel" aria-hidden="true" data-bs-backdrop="static" data-bs-keyboard="false">
        <div class="modal-dialog">
            <div class="modal-content">
                <input type="hidden" value="0" id="CountryId" />
                <div class="modal-header bg-primary text-white">
                    <h5 class="modal-title" id="myModalLabel"></h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="form-group row">
                        <div class="col-md-6 mb-3">
                            <label for="CountryName" class="form-label">Country Name <span class="text-danger">*</span></label>
                            <input type="text" id="CountryName" class="form-control cleartxt" placeholder="Country Name" />
                            <span class="error"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="CountryCode" class="form-label">Country Code <span class="text-danger">*</span></label>
                            <input type="text" id="CountryCode" class="form-control cleartxt" placeholder="Country Code" />
                            <span class="error"></span>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <div class="w-100 d-flex align-items-center">
                        <div class="me-auto">
                            <img src="~/images/ajax-loader.gif" id="ModalProgress" style="display:none;" />
                        </div>
                        <div class="flex-grow-1 text-center modelalert text-danger"></div>
                        <div>
                            <button type="button" class="btn btn-primary btnModalSubmit">Submit</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="~/PageAssets/master/country.js"></script>
<!-- JavaScript Section -->