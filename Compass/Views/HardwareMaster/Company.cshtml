@using System.Security.Claims
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    var roleId = User.FindFirst("RoleId")?.Value;
    var userId = User.FindFirst("UserId")?.Value;
    var deptId = User.FindFirst("DeptId")?.Value;
}
@{
    Layout = "~/Views/Shared/_TestLayout.cshtml";
}

<div class="container ">
    <div id="modalLoader1" class="modal-loader modalLoader">
        <div class="spinner"></div>
        <p class="loading-text">Please wait...</p>
    </div>
    <div class="filter-panel mt-5">
        <div class="row">
            <div class="col-md-8"></div>
            <div class="col-md-4">
                <button type="button" class="btn bg-d common_btn1 txt-white" data-bs-toggle="modal" data-bs-target="#myModal">
                    Add Brand
                </button>

            </div>
        </div>
    </div>
</div>
@section Modals {
    <!-- Brand Modal -->
    <div class="modal" id="myModal">
        <div class="modal-dialog">
            <div class="modal-content">

                <!-- Modal Header -->
                <div class="modal-header  bg-ld ">
                    <h4 class="modal-title txt-white" id="myModalLabel">Add Brand</h4>
                    <button type="button" class="btn-close b-light" data-bs-dismiss="modal"></button>
                </div>

                <!-- Modal body -->
                <div class="modal-body">
                    <div class="form-group row">
                        <div class="col-md-12 ">
                            <label class="form-label mb-0">Brand Name<span class="text-danger">*</span></label>
                            <input type="text" id="BrandName" class="form-control txtbx mt-0 cleartxt" placeholder="Brand Name" />
                            <span class="error"></span>
                        </div>


                    </div>

                    <div class="form-group row">


                        <div class="col-md-6 mb-3">

                            <div class="form-check">

                                <label class="form-check-label" for="flexRadioDefault1">
                                    Is Active radio
                                </label>
                                <input class="form-check-input" type="checkbox" name="IsActive" id="IsActive" checked>

                            </div>

                            <span class="error"></span>
                        </div>
                    </div>

                </div>

                <!-- Modal footer -->
                <div class="modal-footer">
                    <div class="me-auto">
                        <img src="~/images/ajax-loader.gif" id="ModalProgress" style="display:none;" />
                    </div>
                    <div class="flex-grow-1 text-center modelalert text-danger"></div>
                    <button type="button" class="btn btnModel btnModalSubmit">Submit</button>
                    <button type="button" data-bs-dismiss="modal" class="btn btnModel">Close</button>

                </div>

            </div>
        </div>
    </div>
    <div class="container mt-5">
        <h2 class="mb-4">Brand List</h2>

        <table id="myTable" class="table table-striped table-bordered">
            <thead class="table-dark">
                <tr>
                    <th>Sr.No</th>
                    <th>Brand Name</th>
                    <th>Is Active</th>
                    <th>Action</th>


                </tr>
            </thead>
            <tbody>
            </tbody>
            <tfoot class="tfoot bg-primary">
            </tfoot>
        </table>
    </div>

}


@section Scripts {
    <script src="~/pageAssets/Hardware/Js/HardwareMaster/Company.js" asp-append-version="true"></script>
}
