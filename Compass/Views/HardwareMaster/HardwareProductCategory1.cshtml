@{
    Layout = "~/Views/Shared/_TestLayout.cshtml";
}

<div class="container ">
    <div class="filter-panel mt-5 div-coral-base">
        <div class="row">
            <div class="col-md-8"></div>
            <div class="col-md-4">
                <button type="button" class="btn  btn-coral txt-white" data-bs-toggle="modal" data-bs-target="#myModal">
                    Add P. Category
                </button>

            </div>
        </div>
    </div>
</div>
@section Modals {
<!-- The Modal -->
<div class="modal" id="myModal">
    <div class="modal-dialog">
        <div class="modal-content">

            <!-- Modal Header -->
            <div class="modal-header  bg-ld ">
                <h4 class="modal-title txt-white" id="myModalLabel">Product Main Category</h4>
                <button type="button" class="btn-close b-light" data-bs-dismiss="modal"></button>
            </div>

            <!-- Modal body -->
            <div class="modal-body" id="myModal">
                <div id="#toast-container"></div>
                <div class="form-group row">
                    <div class="col-md-6 mb-3">
                        <label class="form-labelo">Categroy Name<span class="text-danger">*</span></label>
                            <select id="ddlMcategory" class="form-select search_ddl select2" aria-label=".form-select-sm">
                            <option selected value="0">select</option>
                        </select>
                        <span class="error"></span>
                    </div>
                    <div class="col-md-6 ">
                        <label class="form-label mb-0">Product Name<span class="text-danger">*</span></label>
                        <input type="text" id="txtProductname" class="form-control txtbx mt-0 cleartxt" placeholder="Product Name" />
                        <span class="error"></span>
                    </div>

                   
                </div>
                <div class="form-group row">
                    <div class="col-md-6 mb-3">
                        <div class="input-group mb-3">
                            <input type="file" class="form-control" id="fileAttached">
                            <label id="fileAttached" class="input-group-text" for="fileAttached">Upload</label>
                        </div>

                        <span class="error"></span>
                    </div>

                    <div class="col-md-6 mb-3">
                        
                        <div class="form-check">
                            <label class="form-check-label" for="flexRadioDefault1">
                                Is Active
                            </label>
                            <input class="form-check-input" type="checkbox" name="chkIsActive" id="chkIsActive" checked>

                        </div>

                        
                    </div>
                </div>
               
            </div>

            <!-- Modal footer -->
            <div class="modal-footer">
                <div class="me-auto">
                    <img src="~/images/ajax-loader.gif" id="ModalProgress" style="display:none;" />
                </div>
                <div class="flex-grow-1 text-center modelalert text-danger"></div>
                <button type="button" class="btn btnModel btnModalSubmit">Submit</button>
                <button type="button" data-bs-dismiss="modal" class="btn btnModel">Close</button>

            </div>

        </div>
    </div>
</div>
<div class="container mt-5">
    <h4 class="mb-4">Product List</h4>

        <table id="myTable" class="table orangeTh table-striped table-hover table-bordered">
        <thead class="bg-d">
            <tr>
                <th>Sr.No</th>
                <th>Main Category</th>
                <th>Product Name</th>
                <th>Is Active</th>
                <th>Edit</th>

            </tr>
        </thead>
        <tbody>
        </tbody>
        <tfoot class="tfoot bg-primary">
            
        </tfoot>
    </table>
</div>
}

